<h2 class="page-header text-center">Add User</h2>

<form action="/users" method="post" role="form">
	<div class="form-group">
		<input type="text" placeholder="name" name="user[name]" class="form-control"/>
	</div>
	<div class="form-group">
		<input type="text" placeholder="email" name="user[email]" class="form-control"/>
	</div>
		<input type="password" placeholder="password" name="user[password]" class="form-control"/>
	<div class="form-group">
	</div>
	<div class="form-group">
		<input type="password" placeholder="confirm password" name="user[password_confirmation]" class="form-control" />
	</div>
	<input type="submit" value="submit" class="btn btn-primary" />
</form>