<ul class="nav nav-pills pull-right">
	<li><%= link_to "Edit",  edit_api_path(@api) %></li>
	<li><%= link_to "Delete",  api_path(@api), method: :delete %></li>
</ul>

<h2 class="page-header text-center"><%= @api.name %></h2>

<p><%= simple_format(@api.description) %></p>

<table class="table table-hover table-bordered">
	<thead>
		<th colspan=2 >API Info</th>
	</thead>
	<tbody>
		<tr>
			<td>Mashups:</td>
			<td><%= link_to "#{@api.mashups.count} mashups made with this API", api_mashups_path(@api) %></td>
		</tr>
		<tr>
			<td>API homepage:</td>
			<td><%= link_to @api.url, @api.url %></td>
		</tr>
		<tr>
			<td>Developer key required:</td>
			<td><%= @api.requires_key.capitalize %></td>
		</tr>
	</tbody>
</table>
