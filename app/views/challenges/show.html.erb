<div class="jumbotron text-center">
	<h2>Your challenge is:</h2>
		<% @apis.each do |api| %>
			<h2><%= api.name %></h2>
			<% unless api == @apis.last %>
				<h2>+</h2>
			<% end %>
		<% end %>
	<div class="row">
		<div class="col-md-6">
			<h2>
				<%= link_to "Challenge accepted!", new_mashup_path, class: "btn btn-success btn-lg btn-block" %>
			</h2>
		</div>
		<div class="col-md-6">
			<h2>
				<%= link_to "I'm not worthy!", challenge_path, class: "btn btn-danger btn-lg btn-block"%>
			</h2>
		</div>
	</div>
</div>